<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/eight_dp">

    <ImageView
        android:id="@+id/ivMessageUserImage"
        android:layout_width="@dimen/received_messages_list_side_icon_wh"
        android:layout_height="@dimen/received_messages_list_side_icon_wh"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_weight="0.3"
        android:maxWidth="@dimen/list_side_icon_wh">
    </ImageView>


    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="@dimen/two_dp"
        android:textSize="@dimen/TEXT_SIZE_NORMAL"
        android:scaleType="fitXY"
        android:layout_marginLeft="8dp"
        android:textColor="@color/border_color"
        android:layout_marginRight="@dimen/seventy_three_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivMessageUserImage"
        app:layout_constraintTop_toTopOf="parent"></ImageView>


    <TextView
        android:id="@+id/tvMessageRecieved"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/two_dp"
        android:textSize="@dimen/TEXT_SIZE_NORMAL"
        android:layout_marginLeft="8dp"
        android:textColor="@color/border_color"
        android:layout_marginRight="@dimen/seventy_three_dp"
        android:background="@drawable/chat_window_message_bg"
        app:layout_constraintBottom_toBottomOf="@id/ivMessageUserImage"
        app:layout_constraintLeft_toRightOf="@id/ivMessageUserImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivMessageUserImage"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>